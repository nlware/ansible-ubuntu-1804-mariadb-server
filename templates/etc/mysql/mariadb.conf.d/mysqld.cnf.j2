# {{ ansible_managed }}

[mysqld]

group_concat_max_len = {{ ubuntu_1804_mariadb_server_configuration_mysqld_group_concat_max_len | default(1024) }}

lc_time_names = {{ ubuntu_1804_mariadb_server_configuration_mysqld_lc_time_names | default('en_US') }}

net_read_timeout = {{ ubuntu_1804_mariadb_server_configuration_mysqld_net_read_timeout | default(30) }}

max_connections = {{ ubuntu_1804_mariadb_server_configuration_mysqld_max_connections | default(151) }}

max_heap_table_size = {{ ubuntu_1804_mariadb_server_configuration_mysqld_max_heap_table_size | default(16777216) }}

max_statement_time = {{ ubuntu_1804_mariadb_server_configuration_mysqld_max_statement_time | default(0) }}

skip_name_resolve = {{ ubuntu_1804_mariadb_server_configuration_mysqld_skip_name_resolve | default(1) }}

tmp_table_size = {{ ubuntu_1804_mariadb_server_configuration_mysqld_tmp_table_size | default(16777216) }}

query_cache_type = {{ ubuntu_1804_mariadb_server_configuration_mysqld_query_cache_type | default(1) }}

